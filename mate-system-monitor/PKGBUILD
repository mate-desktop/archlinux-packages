#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-system-monitor
pkgver=1.6.0
pkgrel=1
pkgdesc="A system monitor for MATE"
arch=(i686 x86_64)
license=('GPL')
depends=('libmatewnck' 'libgtop' 'gtkmm' 'librsvg' 'mate-icon-theme')
makedepends=('mate-doc-utils' 'pkgconfig' 'intltool')
groups=('mate-extras')
options=(!emptydirs !libtool)
url="http://mate-desktop.org"
install=mate-system-monitor.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('3a84ebc128e0f906f131bec03bf16875639844e03f8a6e9583bc5c92cc147838')

build() {
	cd "${srcdir}/${pkgname}-$pkgver"
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
		--libexecdir=/usr/lib/${pkgname} \
		--localstatedir=/var --disable-static \
		--disable-scrollkeeper \
		--disable-schemas-install

	# there is some pre-compiled files on the tar
	make clean
	make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="$pkgdir/" install
}
