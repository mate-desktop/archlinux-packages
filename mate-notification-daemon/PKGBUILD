#Contributor: Xpander <xpander0@gmail.com>

pkgname=mate-notification-daemon
pkgver=1.6.0
pkgrel=1
pkgdesc="Notification daemon for MATE"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('libnotify' 'libmatewnck' 'gtk2' 'libcanberra')
makedepends=('intltool')
provides=('notification-daemon')
url="http://mate-desktop.org"
groups=('mate')
options=('!libtool' '!emptydirs')
install=mate-notification-daemon.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('baa96685b20a07dbec1cf3ea945352b5da1a6ca12a0cf693413797e331a30ddd')


build() {
    cd "${srcdir}/$pkgname-$pkgver"

    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --libexecdir=/usr/lib/mate-notification-daemon \
        --disable-schemas-install || return 1

    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="$pkgdir/" install
}
