pkgname=mate-media-gstreamer
pkgver=1.6.0
pkgrel=1
pkgdesc="MATE Media Tools"
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('gstreamer0.10-base-plugins' 'mate-panel' 'libnotify')
makedepends=('mate-common' 'mate-doc-utils' 'mate-settings-daemon')
options=('!emptydirs' '!libtool')
conflicts=('mate-media')
provides=('mate-media')
source=(http://pub.mate-desktop.org/releases/1.6/mate-media-${pkgver}.tar.xz)
sha1sums=('06c3418dfe0be26e74b0e40aa92eea6260579a72')
install=${pkgname}.install

build() {
	cd ${srcdir}/mate-media-${pkgver}
	./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
		--libexecdir=/usr/lib/mate-media \
		--localstatedir=/var \
		--enable-gstmix \
		--disable-pulseaudio \
		--disable-static \
		--disable-scrollkeeper \
	make
}

package() {
    cd ${srcdir}/mate-media-${pkgver}
    make DESTDIR="${pkgdir}" install
}

