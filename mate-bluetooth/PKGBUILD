pkgname=mate-bluetooth
pkgver=1.6.0
pkgrel=2
pkgdesc="A collection of Bluetooth utilities and modules for MATE"
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('dbus' 'desktop-file-utils' 'glib2' 'gobject-introspection' 'gtk-update-icon-cache' 'gtk2'
         'gvfs-obexftp' 'libnotify' 'libunique' 'libx11' 'libxi' 'libxml2'
         'obexd-client' 'obex-data-server')
makedepends=('mate-common' 'mate-doc-utils' 'mate-file-manager-sendto' 'perl-xml-parser')
optdepends=('mate-user-share: Enable sharing via bluetooth and other protocols.')
options=('!emptydirs' '!libtool')
groups=('mate-extras')
source=(http://pub.mate-desktop.org/releases/1.6/${pkgname}-${pkgver}.tar.xz)
sha1sums=('fc8810f16a1b70bd24dd329b505d932f5b672a56')
install=${pkgname}.install

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
		--localstatedir=/var \
		--disable-scrollkeeper \
		--disable-desktop-update \
		--disable-icon-update \
		--disable-introspection
	make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}
