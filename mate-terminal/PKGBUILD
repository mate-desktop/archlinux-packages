#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-terminal
pkgver=1.6.1
pkgrel=1
pkgdesc="The MATE Terminal Emulator"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('dconf' 'vte')
makedepends=('pkgconfig' 'mate-doc-utils' 'intltool' 'mate-common')
options=('!emptydirs' '!libtool')
install=mate-terminal.install
url="http://mate-desktop.org"
groups=('mate-extras')
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('ebcb1c323e9a5cae7f4ed0548b57de34f6ef3361d5b1bf6bc5921f5a49e0301b')

build() {
	cd "${srcdir}/${pkgname}-$pkgver"
	./autogen.sh --prefix=/usr --sysconfdir=/etc --disable-static \
		--localstatedir=/var --disable-scrollkeeper --with-gnu-ld || return 1
	make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="$pkgdir/" install
}
