pkgname=mate-media
pkgver=1.6.0
pkgrel=3
pkgdesc="MATE Media Tools"
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('desktop-file-utils' 'gstreamer0.10-base-plugins' 'mate-panel' 'libnotify' 'libpulse' 'pulseaudio')
makedepends=('mate-doc-utils' 'mate-settings-daemon' 'mate-icon-theme' 'perl-xml-parser')
options=('!emptydirs' '!libtool')
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.6/${pkgname}-${pkgver}.tar.xz)
sha1sums=('06c3418dfe0be26e74b0e40aa92eea6260579a72')
install=${pkgname}.install

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
		--libexecdir=/usr/lib/${pkgname} \
		--localstatedir=/var \
		--enable-pulseaudio \
		--disable-static \
		--disable-scrollkeeper
	make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}
