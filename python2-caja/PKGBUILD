# Maintainer : Martin Wimpress <code@flexion.org>

_ver=1.9.0
_pkgname=python-caja
pkgname=python2-caja
pkgver=1.9.0.20140502.b78ab50
pkgrel=1
pkgdesc="Python binding for Caja, to allow Caja property page and menu item extensions to be written in Python."
url="http://mate-desktop.org"
arch=('i686' 'x86_64')
license=('GPL')
depends=('caja' 'python2-gobject')
makedepends=('git' 'mate-common')
source=("$pkgname"::"git+https://github.com/mate-desktop/${_pkgname}.git")
sha1sums=('SKIP')

pkgver() {
    cd "${srcdir}/${pkgname}"
    echo ${_ver}.$(date +%Y%m%d).$(git rev-parse --short master)
}

prepare() {
    cd "${srcdir}/${pkgname}"
    NOCONFIGURE=1 ./autogen.sh
    sed -i 's/python-config/python2-config/' configure
}

build() {
    cd "${srcdir}/${pkgname}"
	#this is extremely ugly. Someone please provide a REAL fix
	patch < ../../configure_arch_patch.patch
    PYTHON=/usr/bin/python2 ./configure \
        --prefix=/usr \
        --disable-static
    make
}

package() {
    cd "${srcdir}/${pkgname}"
    make DESTDIR="${pkgdir}" install
}
