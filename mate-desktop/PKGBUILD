pkgname=mate-desktop
pkgver=1.7.1
pkgrel=2
pkgdesc="Library with common API for various MATE modules"
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=(GPL LGPL)
depends=('desktop-file-utils' 'gtk2' 'hicolor-icon-theme' 'libunique' 'python2'
         'startup-notification')
makedepends=('mate-common' 'mate-doc-utils' 'perl-xml-parser')
optdepends=('lightdm-gtk2-greeter: A lightweight display manager')
options=('!emptydirs' '!libtool')
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.7/${pkgname}-${pkgver}.tar.xz)
sha1sums=(''fd85ec43d378cf2811f924d5c783cfb76047fc0b )
install=${pkgname}.install

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    PYTHON=/usr/bin/python2 ./configure \
        --prefix=/usr \
        --disable-static \
        --disable-scrollkeeper \
        --disable-schemas-compile \
        --enable-gtk-doc
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
    # Prevent conflict errors
    #mv ${pkgdir}/usr/share/omf ${pkgdir}/usr/share/mate-omf
}
