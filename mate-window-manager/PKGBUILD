#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-window-manager
pkgver=1.6.0
pkgrel=1
pkgdesc="A window manager for MATE"
arch=(i686 x86_64)
license=('GPL')
depends=('mate-dialogs' 'libgtop' 'libmatewnck') #  'libcanberra' 'startup-notification'
makedepends=('intltool' 'pkgconfig' 'mate-doc-utils')
options=('!emptydirs' '!libtool')
install=mate-window-manager.install
url="http://mate-desktop.org"
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz
        metacity-restartstyle.patch)
sha256sums=('1ae73bf05a6864ea020292802d2729f3691c2b87d8eb2bffeb2d02cbc7330241' 'ea2450ca3e4fb59166ec18ff4844cc61cb16865880dc6b125078a3ab47bf2caf')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    #patch -Np1 -i "${srcdir}/metacity-restartstyle.patch" || return 1
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --libexecdir=/usr/lib/mate-window-manager \
        --disable-static \
        --disable-startup-notification \
        --disable-scrollkeeper || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install || return 1
}
