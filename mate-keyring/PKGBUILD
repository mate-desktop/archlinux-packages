#Contributor: Xpander <xpander0@gmail.com>

pkgname=mate-keyring
pkgver=1.6.0
pkgrel=1
pkgdesc="MATE Password Management daemon"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('dbus' 'gtk-doc' 'gtk2')
makedepends=('intltool' 'pkgconfig' 'python2' 'glib2')
url="http://mate-desktop.org"
groups=('mate')
options=('!libtool' '!emptydirs')
install=mate-keyring.install
provides=('gnome-keyring')
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('f77c48c59a9611baa9721d0a30e78f148629d1754066844bea053cb80141652b')


build() {
    cd "${srcdir}/$pkgname-$pkgver"

    ./autogen.sh --prefix=/usr --sysconfdir=/etc \
        --localstatedir=/var --disable-static \
        --libexecdir=/usr/lib/mate-keyring \
        --with-pam-dir=/usr/lib/security --with-root-certs=/etc/ssl/certs || return 1

    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="$pkgdir/" install
}
