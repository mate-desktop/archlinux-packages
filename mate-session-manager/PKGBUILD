#Contributor: Xpander <xpander0@gmail.com>

pkgname=mate-session-manager
pkgver=1.6.0
pkgrel=1
pkgdesc="The MATE Session Handler"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL' 'LGPL')
depends=('upower' 'gtk2' 'glib2' 'hicolor-icon-theme' 'libxtst' 'mate-polkit') #  'startup-notification'
makedepends=('pkgconfig' 'intltool' 'xtrans')
options=('!emptydirs' '!libtool')
install=mate-session-manager.install
url="http://mate-desktop.org"
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('32a9976955d9fe06731a061f2bb69f00528faf45c86f0468b4c43af4eac463e4')


build() {
    cd "${srcdir}/$pkgname-$pkgver"

    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
	    --libexecdir=/usr/lib || return 1

    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="$pkgdir/" install
}
