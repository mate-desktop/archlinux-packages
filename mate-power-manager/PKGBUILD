pkgname=mate-power-manager
pkgver=1.6.0
pkgrel=1
pkgdesc="Session daemon that makes it easy to manage your laptop or desktop system for Mate Desktop"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('libnotify' 'libunique' 'libcanberra' 'hicolor-icon-theme' 'upower' 'libmatekeyring')
makedepends=('intltool' 'pkgconfig' 'mate-doc-utils' 'mate-panel' 'mate-control-center')
options=('!emptydirs')
install=mate-power-manager.install
url="http://mate-desktop.org"
groups=('mate-extras')
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('9730e62ed4049d9c9b707740d2ce9cac5eb4fb7f512a9bba2c9d78137b9ce5bf')

build() {

	cd "${srcdir}/${pkgname}-${pkgver}"
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var \
		--libexecdir=/usr/lib/${pkgname} \
		--disable-scrollkeeper 
		#--enable-applets
		#--with-dbus-services=/usr/share/dbus-1/services \
		#--with-dpms-ext \

	make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="$pkgdir/" install
}
