pkgname=python-caja
pkgver=1.6.0
pkgrel=1
pkgdesc=""
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://mate-desktop.org"
license=('GPL')
groups=()
depends=('mate-file-manager' 'mate-common')
               
install=$pkgname.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('2a696f24dd3b34609117d66ac4a768409419964fa21db300bdb19d042e513990') 

build() {
cd $srcdir/$pkgname-$pkgver
 
  ./autogen.sh LDFLAGS="-lm" --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$pkgname \
  --disable-static --disable-scrollkeeper
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
