# TO  BE  EDITED!!!! IT WORK, OTHERWISE!

pkgname=mate-file-manager-share
pkgver=1.6.0
pkgrel=1
pkgdesc=""
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('')
makedepends=('') #
groups=('mate-extras')
options=(!emptydirs)
replace=('')
conflicts=('')
url="http://mate-desktop.org"
install=mate-file-manager-share.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
md5sums=('70a7a02fee63ae358e7e4d943f9206c5')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    PYTHON=/usr/bin/python2 ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --libexecdir=/usr/lib/mate-applets \
        --disable-static \
        --disable-scrollkeeper \
        --enable-polkit \
        --enable-networkmanager \
        --enable-mixer-applet \
        --enable-mini-commander \
        --enable-frequency-selector \
        --enable-ipv6 \
        --disable-schemas-install || return 1
	make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="${pkgdir}" install || return 1
}
